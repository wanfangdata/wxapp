icon {
    display: inline-block;
    vertical-align: middle;
    font: normal normal normal 14px/1 "weui";
    font-size: inherit;
    text-rendering: auto;
    -webkit-font-smoothing: antialiased;
}
.search-bar {
    position: fixed;
    top: 0px;
    width:100%;
    padding: 10px;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    box-sizing: border-box;
    background-color: #EFEFF4;
    z-index: 100000;
}
.search-bar-box {
    position: relative;
    padding-left: 10px;
    padding-right: 30px;
    height: 100%;
    width: 100%;
    box-sizing: border-box;
    z-index: 1;
}
.search-bar-box icon {
    display: block;
}
.search-bar-box .search-btn{
    position: absolute;
    right: 5px;
    top:7px;
    background-color: #fff;
    border: none;
    width:24px;
    height: 22px;
    padding:0;
}
.search-bar-box .search-btn:after{
    display: none;
}
.search-bar-box input{
    padding: 4px 0;
    width: 100%;
    height: 1.42857143em;
    border: 0;
    font-size: 18px;
    line-height: 1.42857143em;
    box-sizing: content-box;
    background: transparent;
}
.search-bar:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1px solid #D7D6DC;
    color: #D7D6DC;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.search-bar:after {
    content: " ";
    position: absolute;
    left: 0;
    bottom: 0;
    right: 0;
    height: 1px;
    border-bottom: 1px solid #D7D6DC;
    color: #D7D6DC;
    -webkit-transform-origin: 0 100%;
    transform-origin: 0 100%;
    -webkit-transform: scaleY(0.5);
    transform: scaleY(0.5);
}
.search-bar-form{
    position: relative;
    -webkit-box-flex: 1;
    -webkit-flex: auto;
    flex: auto;
    background-color: #ffffff;
}
.search-result{
    margin-top: 50px;
    display: flex;
    flex-direction: column;
    background-color: #f8f9fb;
}
.paper-item{
    padding: 20px;
    margin: 10px 0;
    -webkit-box-align: center;
    -webkit-align-items: center;
    align-items: center;
    -webkit-transition: .3s;
    transition: .3s;
    background-color: #fff;
    font-size: 18px; 
    color:#666;   
}
.paper-title{
    color: #333;
    line-height: 24px;
    font-size: 18px;
}
.paper-abstract{
    color: #666;
    line-height: 24px;
    font-size: 16px;
}
.paper-keyword{
    background-color: #f5f5f5;
    border: 1px #f5f5f5 solid;
    border-width: 1px 0;
    color: #3ab176;
    margin:2px 10px 2px 0;
    font-size: 14px;
    line-height: 24px;
    padding:0 3px;
    display: inline-block;
}